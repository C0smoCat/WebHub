extends ../layout

block head
    title Авторизация - WebHub
    style
        include style.css
    script
        include script.js
block content
    div(id='buttons')
        button(class="tablink" onclick="openCity('auto', 'reg_but','auto_but')" id="auto_but") Авторизация
        button(class="tablink" onclick="openCity('reg', 'auto_but','reg_but')" id="reg_but") Регистрация
    div(id="auto" class="tabcontent")
        form
            label E-mail
            input(type='email')
            label Пароль
            input(type='password')
            a(href='#' id="forgotten") Забыли пароль?
            input(type='submit' id="inside" value='Войти')
    div(id="reg" class="tabcontent")
        form
            label Логин
            input(type="text" placeholder='Ваш логин')
            label Пароль
            input(type='password' placeholder='Ваш пароль')
            label E-mail
            input(type="email" placeholder='Выш e-mail')
            label Статус
            input(type="text" placeholder='Ваш статус')
            input(type="submit" id="spo_sub" value='Регистрация')
        div
            h1 Аватарка
            img(src='/avatars/ava16.png')
            button Загрузить

