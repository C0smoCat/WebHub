extends ../layout

block head
    title Форум - WebHub
    style
        include style.css

block content
    form(
        class="example"
        action="action_page.php"
    )
        input(type="text" placeholder="Поиск темы" name="search")
        button(type="submit")
            p Поиск
    each theme in themes
        a(href=theme.url class='theme')
            div
                img(src=theme.avatar)
                div
                    p(style='font-weight: bolder;')=theme.title
                    p=theme.last_message