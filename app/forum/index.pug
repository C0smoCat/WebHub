extends ../layout

block head
    title Форум - WebHub
    style
        include style.css

block content
    p TODO
    form(
        class="example"
        action="action_page.php"
    )
        input(type="text" placeholder="Поиск темы" name="search")
        button(type="submit")
            i(class="fa fa-search")
    each theme in themes
        a(href=themes.url)
        div(style={
            background: "#464646",
        })
            a(href='/')
                img(src=theme.avatar
                    width="100px"
                    height="100px"
                    style={
                        margin: "5px",
                    })
            div(style={
                "text-align": "center",
                "font-weight": "900",
                "font-size": "20px"
            })
                p #{theme.title}
                p #{theme.last_message}