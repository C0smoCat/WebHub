- const backgroud = Math.randomizeArray(["/slider.jpg", "/udishka.png", "/vasyan.jpeg"]);
header(
    style={
        background: "url(" + backgroud + ") no-repeat",
        "background-color": "#494949",
        display: "flow-root",
        "background-size": "100%",
        "min-height": (is_big_topnav || false) ? "400px" : "0",
        "background-repeat-y": "repeat",
        position: "relative",
        "box-shadow": is_big_topnav ? "inset 0 70px 20px #0005" : "inset 0 1000px 0px #0005"
    })
    if (is_big_topnav || false)
        div(style={
            position: "absolute",
            bottom: "0px",
            background: "rgba(7, 7, 7, 0.75)",
            color: "white",
            width: "100%"
        })
            p(style={"text-align": "center"}) Большая шапка!

    a(href='/')
        img(
            class="hover-logo"
            src="/logo.png"
            width="46px"
            height="46px"
        )
    a(href=user.is_authorised ? "/user" : "/login")
        img(
            class="hover-logo"
            src=user.avatar
            style={
                "border-radius": "50%",
                margin: "10px",
                float: "right",
                border: (user.is_premium ? "2px solid #fdd835" : "2px solid #000")
            }
            width="44px"
            height="44px"
        )
    if user.is_authorised
        div(style={
            float: "right",
            margin: "10px"
        })
            //- img(src="lock.png"
            //-     height="46px"
            //-     width="46px"
            //- )
            p(style={
                float: "right",
                margin: "0px",
                color: "#eee",
                display: "inline-block",
                color: "#f2f2f2",
                "text-align": "center",
                padding: "10px",
                "text-decoration": "none",
                "font-size": "22px"
            }) $ #{user.coins}
    ul(class="topnav" id="myTopnav")
        li
            a(class=current_page === "courses" ? "active" : "" href="/courses") Курсы
        li
            a(class=current_page === "sandbox" ? "active" : "" href="/sandbox") Песочница
        li
            a(class=current_page === "forum" ? "active" : "" href="/forum") Форум
        if user.is_authorised
            li
                a(class=current_page === "play" ? "active" : "" href="/play") Играть
            li
                a(class=current_page === "leaderboard" ? "active" : "" href="/leaderboard") Топ
style.
    .hover-logo {
        transition: all .6s cubic-bezier(0.165, 0.84, 0.44, 1);
        margin: 10px;
        float: left;
    }

    .hover-logo:hover {
        filter: drop-shadow(0px 0px 5px #222);
        transform: scale(1.1, 1.1)
    }

    .topnav {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    .topnav > li > a {
        float: left;
        display: inline-block;
        color: #ddd;
        text-align: center;
        padding: 16px;
        text-decoration: none;
        font-size: 32px;
    }

    .topnav > li > .active {
        text-decoration: underline;
    }

    .topnav > li > a:hover {
        color: #fff;
    }

    @keyframes shake {
        0% {
            transform: translate(1px, 1px) rotate(0deg);
        }
        10% {
            transform: translate(-1px, -2px) rotate(-1deg);
        }
        20% {
            transform: translate(-3px, 0px) rotate(1deg);
        }
        30% {
            transform: translate(3px, 2px) rotate(0deg);
        }
        40% {
            transform: translate(1px, -1px) rotate(1deg);
        }
        50% {
            transform: translate(-1px, 2px) rotate(-1deg);
        }
        60% {
            transform: translate(-3px, 1px) rotate(0deg);
        }
        70% {
            transform: translate(3px, 1px) rotate(-1deg);
        }
        80% {
            transform: translate(-1px, -1px) rotate(1deg);
        }
        90% {
            transform: translate(1px, 2px) rotate(0deg);
        }
        100% {
            transform: translate(1px, -2px) rotate(-1deg);
        }
    }
