header(
    style={
        background: "url(/slider.jpg) no-repeat",
        "background-color": "#494949",
        display: "flow-root",
        "background-size": "100%"
    })
    img(
        src="/logo.png"
        width="46px"
        height="46px"
        style={
            margin: "5px",
            float: "left",
        }
    )
    img(
        src=user.avatar
        style={
            "border-radius": "50%",
            margin: "5px",
            float: "right",
            border: "2px solid #fdd835"
        }
        width="44px"
        height="44px"
    )
    if user.is_authorised
        div(style={
            float: "right",
            margin: "5px",
            "border-radius": "10%"
        })
            img(src="lock.png"
                height="60px"
                width="60px"
            )
            p #{user.coins}
    img(
        id="open-button"
        src="/gabe.png"
        width="55px"
        height="45px"
        style={
            float: "right",
            margin: "5px",
            cursor: "pointer",
            animation: "pulse 1.25s infinite cubic-bezier(0.66, 0, 0, 1), shake 0.5s infinite"
        }
    )
    ul(class="topnav" id="myTopnav")
        li
            a(class="active" href="/courses") Курсы
        li
            a(href="#sandbox") Песочница
        li
            a(href="#forum") Форум
        if user.is_authorised
            li
                a(href="#play") Играть
            li
                a(href="#leaderboard") Топ
style.
    .topnav {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    .topnav > li > a {
        float: left;
    }

    .topnav > li > a {
        display: inline-block;
        color: #f2f2f2;
        text-align: center;
        padding: 16px;
        text-decoration: none;
        font-size: 22px;
    }

    .topnav > li > a:hover {
        color: #fff;
    }

    @keyframes shake {
        0% {
            transform: translate(1px, 1px) rotate(0deg);
        }
        10% {
            transform: translate(-1px, -2px) rotate(-1deg);
        }
        20% {
            transform: translate(-3px, 0px) rotate(1deg);
        }
        30% {
            transform: translate(3px, 2px) rotate(0deg);
        }
        40% {
            transform: translate(1px, -1px) rotate(1deg);
        }
        50% {
            transform: translate(-1px, 2px) rotate(-1deg);
        }
        60% {
            transform: translate(-3px, 1px) rotate(0deg);
        }
        70% {
            transform: translate(3px, 1px) rotate(-1deg);
        }
        80% {
            transform: translate(-1px, -1px) rotate(1deg);
        }
        90% {
            transform: translate(1px, 2px) rotate(0deg);
        }
        100% {
            transform: translate(1px, -2px) rotate(-1deg);
        }
    }
