include ./share-mixins.pug

doctype html
html(lang="ru")
    head
        style.
            .content-body {
                max-width: 1500px;
            }

            .user-avatar {
                position: relative;
            }

            .user-avatar > img {
                border-radius: 50%;
                display: block;
                background-color: black;
                border: solid 2px black;
            }

            .user-avatar > div {
                border-radius: 50%;
                background-color: #ADFF2F;
                position: absolute;
                border: solid 2px #202020;
            }

            @media only screen and (max-width: 1500px) {
                .content-body {
                    max-width: 1000px;
                }
            }
        meta(charset="utf-8")
        link(rel="shortcut icon" href="/favicon.ico" type="image/x-icon")
        link(rel="stylesheet" href="/fontawesome-free-5.13.0-web/css/all.min.css")
        block head

    include ./header.pug
    body(style={
        "font-family": "Arial",
        "background-color": "#202020",
        color: "#eee",
        margin: 0,
        padding: 0
    })
        div(
            class="content-body"
            style={
                margin: "auto",
                padding: "0 15px"
            }
        )
            block content
    include ./footer.pug
